{
  "name": "project-api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/services/project-api/src",
  "projectType": "application",
  "tags": ["language:typescript", "layer:backend", "scope:projects"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/services/project-api",
        "format": ["cjs"],
        "bundle": true,
        "main": "apps/services/project-api/src/main.ts",
        "tsConfig": "apps/services/project-api/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*.graphql",
            "input": "{projectRoot}/src",
            "output": "/"
          }
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {
          "minify": false,
          "sourcemap": true
        },
        "production": {
          "minify": true,
          "sourcemap": false
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "project-api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "project-api:build:development"
        },
        "production": {
          "buildTarget": "project-api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts"
      }
    },
    "docker": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "defaultConfiguration": "build",
      "options": {
        "args": "--image ghcr.io/codyslexia/{projectName}:latest"
      },
      "configurations": {
        "build": {
          "command": "docker buildx build -f {projectRoot}/Dockerfile . -t {args.image}"
        },
        "push": {
          "command": "docker push {args.image}"
        },
        "run": {
          "command": "docker run --name {projectName} -it -d -p 3000:3000 {args.image}"
        },
        "start": {
          "command": "docker start {projectName}"
        },
        "stop": {
          "command": "docker stop {projectName}"
        },
        "remove": {
          "command": "docker rm {projectName}"
        }
      }
    }
  }
}
