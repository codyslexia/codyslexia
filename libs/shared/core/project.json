{
  "name": "@shared/core",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/core/src",
  "projectType": "library",
  "tags": ["language:typescript", "layer:isomorphic", "scope:shared", "type:util"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared/core",
        "main": "libs/shared/core/src/index.ts",
        "tsConfig": "libs/shared/core/tsconfig.lib.json",
        "assets": [
          {
            "glob": "*.md",
            "input": ".",
            "output": "."
          },
          {
            "glob": "LICENSE",
            "input": "{workspaceRoot}",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts"
      }
    }
  }
}
