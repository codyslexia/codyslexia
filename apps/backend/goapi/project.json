{
  "name": "goapi",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/backend/goapi/src",
  "tags": ["lang:go", "layer:backend", "scope:accounts"],
  "targets": {
    "build": {
      "executor": "@plugins/golang:build",
      "options": {
        "main": "{projectRoot}/src/main.go",
        "env": {
          "GIN_MODE": "release",
          "GOARCH": "amd64",
          "GOOS": "linux"
        }
      }
    },
    "docker": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "docker build -t ghcr.io/codyslexia/goapi -f apps/backend/goapi/Dockerfile . --no-cache"
      }
    },
    "lint": {
      "executor": "@plugins/golang:lint",
      "cache": true
    },
    "serve": {
      "executor": "@plugins/golang:serve",
      "options": {
        "main": "{projectRoot}/src/main.go"
      }
    },
    "test": {
      "executor": "@plugins/golang:test",
      "cache": true
    }
  }
}
