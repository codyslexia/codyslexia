{
  "name": "graphql-users",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/graphql/users/src",
  "projectType": "application",
  "tags": ["language:typescript", "layer:backend", "scope:users"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/graphql/users",
        "format": ["cjs"],
        "bundle": true,
        "main": "apps/graphql/users/src/main.ts",
        "tsConfig": "apps/graphql/users/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*.graphql",
            "input": "{projectRoot}/src",
            "output": "/"
          }
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {
          "minify": false,
          "sourcemap": true
        },
        "production": {
          "minify": true,
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "docker": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "defaultConfiguration": "build",
      "options": {
        "args": "--image ghcr.io/codyslexia/{projectName}:latest"
      },
      "configurations": {
        "build": {
          "command": "docker buildx build -f {projectRoot}/Dockerfile . -t {args.image}"
        },
        "push": {
          "command": "docker push {args.image}"
        },
        "run": {
          "command": "docker run --name {projectName} -it -d -p 3000:3000 {args.image}"
        },
        "start": {
          "command": "docker start {projectName}"
        },
        "stop": {
          "command": "docker stop {projectName}"
        },
        "remove": {
          "command": "docker rm {projectName}"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "rover subgraph publish --name {args.name} --schema {projectRoot}/src/schema.graphql {args.graph}"
      },
      "configurations": {
        "development": {
          "args": "--name users --graph codyslexia@dev"
        },
        "production": {
          "args": "--name users --graph codyslexia@prod"
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "graphql-users:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "graphql-users:build:development"
        },
        "production": {
          "buildTarget": "graphql-users:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts"
      }
    }
  }
}
