{
  "name": "graphql-projects",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/graphql/projects/src",
  "projectType": "application",
  "tags": ["language:typescript", "layer:backend", "scope:projects"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/graphql/projects",
        "format": ["cjs"],
        "bundle": false,
        "main": "apps/graphql/projects/src/main.ts",
        "tsConfig": "apps/graphql/projects/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*.graphql",
            "input": "{projectRoot}/src",
            "output": "apps/graphql/projects/src/"
          }
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {
          "minify": false,
          "sourcemap": true
        },
        "production": {
          "minify": true,
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "codegen": {
      "executor": "@plugins/graphql:codegen",
      "options": {
        "config": "{projectRoot}/codegen.yml"
      }
    },
    "docker": {
      "executor": "@plugins/workspace:docker",
      "outputs": ["{option.outputPath}"],
      "dependsOn": ["build"],
      "options": {
        "outputPath": "dist/apps/graphql/projects"
      }
    },
    "k8s": {
      "executor": "@plugins/workspace:k8s",
      "outputs": ["{option.outputPath}"],
      "options": {
        "outputPath": ".nexa/graphql-projects/k8s"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "rover subgraph publish --name {args.name} --schema {projectRoot}/src/schema.graphql {args.graph}"
      },
      "configurations": {
        "development": {
          "args": "--name projects --graph codyslexia@dev"
        },
        "production": {
          "args": "--name projects --graph codyslexia@prod"
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "graphql-projects:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "graphql-projects:build:development"
        },
        "production": {
          "buildTarget": "graphql-projects:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts"
      }
    }
  }
}
